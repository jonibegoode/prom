<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>{% block title %}promo-vert{% endblock %}</title>

    {% block stylesheets %}
        <link rel="stylesheet" href="//cdn.webix.com/edge/webix.css" type="text/css">
        <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/css/bootstrap.min.css">
        <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
        <link rel="stylesheet" href=" {{ asset('css/view.css') }}">
    {% endblock %}

</head>
<body>

<nav class="navbar navbar-toggleable-md navbar-light bg-faded">
    <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarNav"
            aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <a class="navbar-brand" href="{{ path('erp_homepage') }}">HOME</a>
    <ul class="nav navbar-nav">
        <li class="nav-item">
            <a class="nav-link" href="#">Trials <span class="sr-only">(current)</span></a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="#">Protocols</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="#">Planning</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="#">PGE</a>
        </li>
    </ul>
</nav>

{{ dump() }}
<h1>{{ sponsor.name }}</h1>


<div class="container main">

    <div class="row" id="infos-and-map">
        <div class="col">
            <div class="header d-flex justify-content-between" id="first-header">
                <h4>Main Information</h4>
                <div class="edit"><a href="{{ path('erp_sponsor_edit', { 'id': sponsor.id }) }}"><i class="fa fa-2x fa-pencil-square-o" aria-hidden="true"></i></a></div>

            </div>
            <div class="row">

                <div class="col-md-8" id="infos">

                    <div class="field-groups">

                        <div class="field-group d-flex justify-content-between">
                            <div class="field">Name:</div>
                            <div class="value">{{ sponsor.name }}</div>
                        </div>
                        <div class="field-group d-flex justify-content-between">
                            <div class="field">Sponsor code:</div>
                            <div class="value">{{ sponsor.sponsorCode }}</div>
                        </div>
                        <div class="field-group d-flex justify-content-between">
                            <div class="field">Country:</div>
                            <div class="value">{{ sponsor.country }}</div>
                        </div>
                        <div class="field-group d-flex justify-content-between">
                            <div class="field">City:</div>
                            <div class="value">{{ sponsor.city }}</div>
                        </div>
                        <div class="field-group d-flex justify-content-between">
                            <div class="field">Zip Code:</div>
                            <div class="value">{{ sponsor.zipCode }}</div>
                        </div>
                        <div class="field-group d-flex justify-content-between">
                            <div class="field">Address:</div>
                            <div class="value">{{ sponsor.address }}</div>
                        </div>
                        <div class="field-group d-flex justify-content-between">
                            <div class="field">Phone Number:</div>
                            <div class="value">{{ sponsor.phoneNumber }}</div>
                        </div>
                        <div class="field-group d-flex justify-content-between">
                            <div class="field">Email:</div>
                            <div class="value">{{ sponsor.email }}</div>
                        </div>

                    </div>
                </div>

            </div>
        </div>
    </div>

    <div class="row" id="trials-involved">
        <div class="col">
            <div class="header flex" id="second-header">
                <h4>List of trials</h4>
            </div>

            <div class="col-md-8" id="infos">
                <ul>
                    {% for trial in list_of_trials %}
                    <li><a href="{{ path('erp_trial', { 'id': trial.id }) }}">{{ trial.gTrialNumber }}</a></li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>
</div>


{% block javascript %}
    <script src="//ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <script src="//cdn.webix.com/edge/webix.js" type="text/javascript"></script>
    <script src="{{ asset('js/jquery.simplefileinput.min.js') }}" type="text/javascript"></script>
{% endblock %}

</body>
</html>